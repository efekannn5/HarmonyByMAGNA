<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F131A">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="#1E2329"
        android:elevation="4dp"
        app:title="Kasa Okuma"
        app:titleTextColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Dolma Durumu KartÄ± -->
    <androidx.cardview.widget.CardView
        android:id="@+id/statusCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="#1E2329"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvDollyStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:gravity="center"
            android:text="ðŸ“¦ Dolly: 1062671 | VIN: 8/16 | â³ Bekleyen: 5"/>
    </androidx.cardview.widget.CardView>

    <!-- Hidden EditText for barcode scanner -->
    <EditText
        android:id="@+id/etHidden"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:textColor="@android:color/transparent"
        android:background="@android:color/transparent"
        android:cursorVisible="false"
        android:alpha="0"
        android:importantForAccessibility="no"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvKasa"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="12dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        app:layout_constraintTop_toBottomOf="@id/statusCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/rvKasa"
        app:layout_constraintBottom_toBottomOf="@id/rvKasa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Remove mode indicator (floating) -->
    <TextView
        android:id="@+id/tvRemoveMode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ðŸ”´ SON KASA Ã‡IKARTMA MODU - Barkod okutun"
        android:textColor="#FF6B6B"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="12dp"
        android:background="#2D1B1B"
        android:elevation="8dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
