<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:elevation="4dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="#1A1E24"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- EOL BaÅŸlÄ±k ve SayÄ±lar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvEolName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="V710-MR-EOL"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:ellipsize="end"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/tvDollyCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3/31"
                android:textColor="#90CAF9"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

        <!-- Progress Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/progress_bar_eol"/>

            <TextView
                android:id="@+id/tvProgressPercent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50%"
                android:textColor="#AAAAAA"
                android:textSize="12sp"
                android:layout_marginStart="8dp"
                android:minWidth="40dp"
                android:gravity="end"/>

        </LinearLayout>

        <!-- VIN Bilgisi ve Bekleyen Dolly -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/tvVinInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“¦ VIN: 8/16"
                android:textColor="#AAAAAA"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tvPendingDollys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â³ Bekleyen: 5"
                android:textColor="#AAAAAA"
                android:textSize="13sp"
                android:layout_marginStart="12dp"
                android:visibility="gone"/>

        </LinearLayout>

        <!-- Durum MesajÄ± (Opsiyonel) -->
        <TextView
            android:id="@+id/tvStatusMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DolmasÄ±na 8 VIN kaldÄ±"
            android:textColor="#FFA726"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:visibility="gone"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
