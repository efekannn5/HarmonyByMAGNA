<?xml version="1.0" encoding="utf-8"?>
<!-- Geliştirilmiş EOL Detay Kartı - Telemetri ve Görsel İyileştirmelerle -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/eolCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="12dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="18dp"
    app:cardBackgroundColor="#1E2329"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- HEADER: EOL Name & Status Indicator -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <!-- Status Indicator Circle -->
            <View
                android:id="@+id/statusIndicator"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@drawable/circle_green"
                android:layout_marginEnd="14dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvEolName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="V710-MR-EOL"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:includeFontPadding="false"/>

                <TextView
                    android:id="@+id/tvPartNumberShort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12345678"
                    android:textColor="#7F8FA6"
                    android:textSize="12sp"
                    android:layout_marginTop="3dp"
                    android:visibility="gone"/>
            </LinearLayout>

            <!-- Dolly Counter BÜYÜK Badge -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_badge"
                android:paddingHorizontal="18dp"
                android:paddingVertical="10dp">

                <TextView
                    android:id="@+id/tvDollyCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3/8"
                    android:textColor="#4CAF50"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:includeFontPadding="false"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DOLLY"
                    android:textColor="#7F8FA6"
                    android:textSize="10sp"
                    android:letterSpacing="0.1"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- DIVIDER -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#2B3340"
            android:layout_marginBottom="16dp"/>

        <!-- TELEMETRY ROW 1: Aktif Dolly & VIN Progress -->
        <LinearLayout
            android:id="@+id/telemetryRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp"
            android:visibility="visible">

            <!-- Sol kenar vurgu -->
            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="#42A5F5"
                android:layout_marginEnd="10dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AKTİF DOLLY"
                    android:textColor="#7F8FA6"
                    android:textSize="11sp"
                    android:letterSpacing="0.08"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvVinInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#5170427"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginTop="3dp"
                    android:includeFontPadding="false"/>
            </LinearLayout>

            <!-- VIN Progress -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VIN DOLULUK"
                    android:textColor="#7F8FA6"
                    android:textSize="11sp"
                    android:letterSpacing="0.08"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvProgressPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15/20"
                    android:textColor="#4CAF50"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginTop="3dp"
                    android:includeFontPadding="false"/>
            </LinearLayout>
        </LinearLayout>

        <!-- PROGRESS BAR - Kalın ve Belirgin -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="14dp">

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="14dp"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:progressTint="#4CAF50"
                android:progressBackgroundTint="#2B3340"
                android:progress="75"
                android:max="100"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">

                <TextView
                    android:id="@+id/tvProgressLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="75% DOLU"
                    android:textColor="#4CAF50"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"/>

                <TextView
                    android:id="@+id/tvRemainingInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 VIN kaldı"
                    android:textColor="#7F8FA6"
                    android:textSize="11sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- TELEMETRY ROW 2: Bekleyen Dolly & Durum -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Pending Dollys Container -->
            <LinearLayout
                android:id="@+id/pendingContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BEKLEYEN:"
                    android:textSize="11sp"
                    android:textColor="#7F8FA6"
                    android:textStyle="bold"
                    android:layout_marginEnd="6dp"/>

                <TextView
                    android:id="@+id/tvPendingDollys"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="#FFA726"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <!-- Status Message -->
            <TextView
                android:id="@+id/tvStatusMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DOLMAK UZERE"
                android:textColor="#FFA726"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingHorizontal="14dp"
                android:paddingVertical="7dp"
                android:letterSpacing="0.05"
                android:background="@drawable/bg_status_warning"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
